# OpenAI API — required for embeddings and LLM
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Telegram Bot Token — required for Telegram integration
# Get from @BotFather on Telegram: /newbot
TELEGRAM_BOT_TOKEN=

# Microsoft Teams Bot credentials — required for Teams integration
# Get from Azure Bot registration: https://portal.azure.com
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=

# Intent classification confidence threshold (0.0 - 1.0, default 0.7)
INTENT_CONFIDENCE_THRESHOLD=0.7

# Database path (default: ./data/intelliknow.db)
DATABASE_URL=sqlite:///./data/intelliknow.db

# Data directory for uploads and FAISS indexes
DATA_DIR=./data

# Max upload file size in bytes (default: 52428800 = 50MB)
MAX_FILE_SIZE_BYTES=52428800
