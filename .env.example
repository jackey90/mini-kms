# Copy this file to .env and fill in your values
# cp .env.example .env

# ─── Required ─────────────────────────────────────────────────
# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# ─── Optional: Telegram Bot ───────────────────────────────────
# Get from @BotFather on Telegram: send /newbot
TELEGRAM_BOT_TOKEN=

# ─── Optional: Microsoft Teams Bot ───────────────────────────
# Get from Azure Portal > Bot Services > App Registration
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=

# ─── Optional: LLM Model Configuration ───────────────────────
# Change to use a different OpenAI model (e.g. gpt-4o, gpt-4o-mini)
OPENAI_CHAT_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ─── Settings (defaults are fine for local demo) ──────────────
INTENT_CONFIDENCE_THRESHOLD=0.7
DATABASE_URL=sqlite:///./data/intelliknow.db
DATA_DIR=./data
MAX_FILE_SIZE_BYTES=52428800
